<resources  xmlns:tools="http://schemas.android.com/tools">

    <!--  Bottom Navigation Text Style  -->
    <style name="bottomNavTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>

    <style name="bottomNavTextStyleActive">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>

    <!-- BottomNavigation -->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
      <!--  <item name="fontFamily">@font/primary_semi</item>-->
    </style>

    <style name="Theme.RansaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RansaApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>





</resources>
